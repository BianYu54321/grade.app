<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="top"
        android:background="#3F51B5">
        <Button
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:text="成绩评估"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line1"
        android:background="@drawable/line_round1"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject11"
                android:layout_width="150dp"
                android:layout_height="40dp"
                tools:ignore="InvalidId"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#3F51B5"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:orientation="horizontal">


                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="成绩："
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/grade11"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="#000000"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="绩点:"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/score11"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/grade_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="10dp"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line2"
        android:background="@drawable/line_round1"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject12"
                android:layout_width="150dp"
                android:layout_height="40dp"
                tools:ignore="InvalidId"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#3F51B5"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="成绩:"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/grade12"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="绩点："
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/score12"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/grade_2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="10dp"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line3"
        android:background="@drawable/line_round1"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject13"
                android:layout_width="150dp"
                android:layout_height="40dp"
                tools:ignore="DuplicateIds,InvalidId"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#3F51B5"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="成绩:"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/grade13"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    tools:ignore="DuplicateIds,InvalidId"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="绩点："
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/score13"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    tools:ignore="DuplicateIds,InvalidId"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/grade_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="10dp"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line4"
        android:background="@drawable/line_round1"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject14"
                android:layout_width="150dp"
                android:layout_height="40dp"
                tools:ignore="InvalidId"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#3F51B5"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="成绩:"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/grade14"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="绩点："
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/score14"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/grade_4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="10dp"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/line5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/line_round1"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/averageGrade"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="45dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@mipmap/backg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="总绩点:"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/sumPoint"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="总学分:"
                    android:gravity="center"
                    android:textColor="#000000"/>

            <TextView
                android:id="@+id/sumScore"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/line_round1"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:background="@mipmap/stability"/>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="稳定性："
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/stability"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="#3F51B5"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:background="@mipmap/summary"/>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="综合评级："
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/sumGrade"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="#3F51B5"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/button_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line6"
        android:text="分析成绩"
        android:background="@drawable/button_round1"
        android:layout_margin="5dp"/>



</RelativeLayout>
